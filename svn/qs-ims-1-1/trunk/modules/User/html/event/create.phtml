<script>
    $(document).ready(function() {

        $('#none').datepicker();
        $("#ui-datepicker-div").wrap('<div style="position:absolute;top:0px;"></div>');
        $(".datepicker").datepicker();
        $(".datepicker").datepicker('option', {dateFormat: 'dd-mm-yy'});
        $(".datepicker").val('');
        $('#qss_event').dialog({
            width: 390,
            height: 220,
            modal: true
        });
    });

    function addActivity()
    {
        var url = sz_BaseUrl + '/user/event/quick';
        var data = $('#activity_form').serialize();
        qssAjax.call(url, data, function(jreturn) {
            $('#qss_event').dialog('close');
        }, function(jreturn) {
            qssAjax.alert(jreturn.message);
        });
    }

    function removeActivity()
    {
        //logDeleteAction
        var url = sz_BaseUrl + '/user/event/log/delete';
        var elid = $('#elid').val();
        var data = {elid: elid};
    	qssAjax.confirm(Language.translate('CONFIRM_DELETE'),function(){
    		qssAjax.call(url, data, function(jreturn) {
                $('#qss_event').dialog('close');
            }, function(jreturn) {
                qssAjax.alert(jreturn.message);
            });
    	});        
    }

</script>
