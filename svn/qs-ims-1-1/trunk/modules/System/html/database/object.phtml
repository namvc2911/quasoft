function diff($a1, $a2) {
	$r = array(); 
    foreach ($a1 as $k => $v) 
    {
     	if(isset($a2[$k]))
     	{
     		$v2 = $a2[$k];
     		foreach ($v as $kk=>$vv)
     		{
		        if ($v2->{$kk} != $vv) 
		        {
		        	if(!isset($r[$k]))
		        	{
		        		$r[$k] = new stdClass();
		        	}
		            $r[$k]->{$kk} = $v2->{$kk}; 
		        }
     		}
     	} 
    } 
    return $r; 
}
