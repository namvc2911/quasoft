					</div><!-- end .cal_content_grid_cols -->
				<?php endfor;?>
				</div>
			<?php endif;?>
			<div class="rows">
		<?php endif;?>
			<?php $mleft=1;?>
			<?php $mright=$this->daysInMonth;?>
			<?php switch ($item->Type){
				case 0:
				case 1:?>
					<?php if($start > $starttime):?>
						<?php $mleft=date('d',$start);?>
					<?php endif;?>
					<?php if(!$end):?>
						<?php $mright=date('d',$endtime);?>
