    function editCell(cell){
        if($(cell).is('[readonly]')){
            return;
        }
        if($(cell).hasClass('nocount')){
            return;
        }
        var width = $(cell).width() - 2;
        var height = $(cell).height() - 2;
        var text = $(cell).text();
