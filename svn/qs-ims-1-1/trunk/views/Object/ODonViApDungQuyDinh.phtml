                                $(cell).append(ctrl);
                                enabledLayout();
                            }
                        },
                        error : function(data, status, e) {
                            /* If upload error */
                            qssAjax.alert(e);
                        }
                    });
                });
                break;
            case 7:
                $(cell).file(function(inp) {
                    inp.id = inp.name = 'myFileInput';

                    /* Upload file by ajax */
                    disabledLayout();
                    $.ajaxFileUpload({
                        url : sz_BaseUrl + '/user/field/uploadfile',
